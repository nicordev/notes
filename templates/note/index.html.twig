{% extends 'base.html.twig' %}

{% block title %}Notes{% endblock %}

{% block body %}
<header>
    <h1>Notes</h1>
    <p><a href="{{ path("notes_create") }}">Add a note</a></p>
</header>

<div class="content">
    <ul>
        {% for note in notes %}
            <li><a href="{{ path("notes_show", {id: note.id}) }}">{{ note.title }}</a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
