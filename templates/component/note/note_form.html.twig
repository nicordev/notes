
<div class="note-form-commands">
    <button id="show-note-form-button" class="btn btn-success">Add a note</button>
    <button id="close-note-form-button" class="btn btn-warning hidden">Close note form</button>
</div>

<div id="note-form" class="note-form-wrapper hidden">
    {{ form_start(noteForm) }}
    {% if noteForm.author is defined %}
        <div class="note-form-component">
            {{ form_label(noteForm.author) }}
            {{ form_widget(noteForm.author) }}
        </div>
    {% endif %}
    <div class="note-form-component">
        {{ form_label(noteForm.title) }}
        {{ form_widget(noteForm.title, {'attr': {'class': 'note-form-input'}}) }}
    </div>
    <div class="note-form-component">
        {{ form_label(noteForm.content) }}
        {{ form_widget(noteForm.content, {'attr': {'class': 'note-form-textarea'}}) }}
    </div>
    <button class="btn btn-success" type="submit">Ok</button>
    {{ form_end(noteForm) }}
</div>

{% block javascripts %}
    <script src="{{ asset('/js/display.js') }}"></script>
    <script src="{{ asset('/js/note_form.js') }}"></script>
{% endblock %}
